<!-- code is inspired and edited heavily from the theme I used which is https://www.bootstrapdash.com/product/free-bootstrap-resume/ -->
<aside>
    <div class="profile-img-wrapper">
        <img src="images/dp.jpg" alt="profile">
    </div>
    <h1 class="profile-name">{{name}}</h1>
    <div class="text-center">
        <span class="badge badge-white badge-pill profile-designation">{{profession}}</span>
    </div>
    <nav class="social-links">
        <a href="{{githubLink}}" target="_blank" class="social-link"><i class="fab fa-github"></i></a>
        <a href="{{linkedInLink}}" class="social-link" target="_blank"><i class="fab fa-linkedin-in"></i></a>
        <a href="{{facebookLink}}" class="social-link" target="_blank"><i class="fab fa-facebook-f"></i></a>
        <a href="{{twitterLink}}" class="social-link" target="_blank"><i class="fab fa-twitter"></i></a>
    </nav>
    <div class="widget">
        <h5 class="widget-title">personal information</h5>
        <div class="widget-content">
            <table class="table">
                <tbody>
                    <tr>
                        <td>Birthday</td>
                        <td>{{birthday}}</td>
                    </tr>
                    <tr>
                        <td>Phone</td>
                        <td>{{phone}}</td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td>{{email}}</td>
                    </tr>
                    <tr>
                        <td>Location</td>
                        <td>{{location}}</td>
                    </tr>
                </tbody>
            </table>
            <a class="btn btn-download-cv btn-primary rounded-pill" href="/files/resume.pdf" target="_blank"> <img
                    src="images/download.svg" alt="download" class="btn-img">View CV </a>
        </div>
    </div>
    <div class="widget card">
        <div class="card-body">
            <div class="widget-content">
                <h5 class="widget-title card-title">LANGUAGES</h5>
                <p>English : fluent</p>
                <p>Sinhalese : native</p>
            </div>
        </div>
    </div>
    <div class="widget card">
        <div class="card-body">
            <div class="widget-content">
                <h5 class="widget-title card-title">INTERESTS</h5>
                <p>Boxing</p>
                <p>Table Tennis</p>
                <p>Videography</p>
                <p>Movies</p>
            </div>
        </div>
    </div>
</aside>